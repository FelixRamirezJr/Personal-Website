<% include templates/nav %>

<div class="row">
  <div class="col m6 push-m3 pull-m3 ">
    <div class="card blue-grey darken-1">
      <form method="post">
        <div class="card-content white-text">
          <div class="full center" style="width: 100%;">
            <span class="card-title">Status Updates</span>
            <p class="center"> Hello <%= name %>, your current status is <%= status %> </p>
          </div>
        </div>
        <div class="card-action center">
          <input class="btn" value="Submit" id="submit">
        </div>
      </form>
    </div>
  </div>
</div>
